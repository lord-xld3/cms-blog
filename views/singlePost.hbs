<!-- singlePost.hbs -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Single Post</title>
</head>
<body>
    <h1>Single Post</h1>

    <div class="post">
        <h2>{{post.title}}</h2>
        <p>{{post.content}}</p>
        <p>Created at: {{post.createdAt}}</p>
        <p>Author: {{post.user.username}}</p>
    </div>

    <a href="/dashboard">Go back to Dashboard</a>
</body>
</html>
