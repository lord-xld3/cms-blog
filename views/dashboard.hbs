<!-- dashboard.hbs -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Dashboard</title>
</head>
<body>
    <h1>Dashboard</h1>

    <a href="/posts/new">Create New Post</a>

    <h2>Existing Posts:</h2>
    {{#each posts}}
      <div class="post">
        <h3>{{this.title}}</h3>
        <p>{{this.content}}</p>
        <p>Created at: {{this.createdAt}}</p>
        <p>Author: {{this.user.username}}</p>
        <a href="/dashboard/edit/{{this.id}}">Edit</a>
        <a href="/dashboard/delete/{{this.id}}">Delete</a>
      </div>
    {{/each}}

    <a href="/logout">Logout</a>
</body>
</html>
