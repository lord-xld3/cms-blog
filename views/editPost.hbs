<!-- editPost.hbs -->
<h1>Edit Blog Post</h1>

<form action="{{post.dataValues.id}}" method="POST">
  <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{post.dataValues.title}}" required>
  </div>
  <div>
    <label for="content">Content:</label>
    <textarea id="content" name="content" required>{{post.dataValues.content}}</textarea>
  </div>
  <button type="submit">Update Post</button>
</form>
