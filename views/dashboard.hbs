<!-- dashboard.hbs -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Dashboard</title>
</head>
<body>
    <h1>Dashboard</h1>
    <a href="/">Home</a>
    <a href="/logout">Logout</a>
    <a href="/dashboard/posts/new">Create New Post</a>

    <h2>Existing Posts:</h2>
    {{#each posts}}
      <div class="post">
        <h3>{{this.title}}</h3>
        <p>{{this.content}}</p>
        <p>Created at: {{this.createdAt}}</p>
        <p>Author: {{this.user.username}}</p>
        <a href="/dashboard/posts/edit/{{this.id}}">Edit</a>
        <form action="/dashboard/posts/delete/{{this.id}}" method="post">
          <input type="submit" value="Delete">
        </form>
      </div>
    {{/each}}
</body>
</html>
