<!-- home.hbs -->
<h1>Welcome to the Home Page</h1>

{{#each posts}}
  <div class="post">
    <h2>{{this.dataValues.title}}</h2>
    <p>{{this.dataValues.content}}</p>
  </div>
{{/each}}

{{#if isAuthenticated}}
  <a href="/dashboard">Go to Dashboard</a>
{{else}}
  <a href="/login">Log In</a>
  <a href="/register">Register</a>
{{/if}}
